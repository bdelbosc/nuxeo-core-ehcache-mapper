<ehcache name="vcs" updateCheck="false">

  <diskStore path="java.io.tmpdir/vcs-cache"/>

  <!-- this can be overridden using default-repository-config.xml cachingMapper properties  -->
  <cache name="unifiedVCSCache"
    maxEntriesLocalHeap="10000"
    maxEntriesLocalDisk="100000"
    eternal="true"
    timeToLiveSeconds="0"
    timeToIdleSeconds="0"
    overflowToDisk="true"
    diskPersistent="false"
    memoryStoreEvictionPolicy="LRU"
    statistics="true"/>
</ehcache>